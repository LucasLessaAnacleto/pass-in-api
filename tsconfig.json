{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ESNext",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    // "declaration": true,
    "resolveJsonModule": true, // opcional, se estiver usando módulos JSON
    "allowSyntheticDefaultImports": true, // opcional, se estiver usando módulos com exportação padrão
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"]
}